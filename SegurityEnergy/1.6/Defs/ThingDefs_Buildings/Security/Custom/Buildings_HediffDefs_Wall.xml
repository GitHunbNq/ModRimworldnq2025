<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>StunCustomWall</defName>
    <label>aturdimiento eléctrico</label>
    <description>Un rayo aturdidor lo golpeó de lleno, dejándolo inmóvil y desorientado mientras sus habilidades se desvanecen por tres minutos.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(255, 255, 0)</defaultLabelColor>
    <stages>
      <li>
        <label>aturdido</label>
        <minSeverity>0</minSeverity>
        <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset> <!-- Reducción moderada, no noquea -->
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.5</offset> <!-- Movimiento muy reducido -->
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset> <!-- Manipulación reducida -->
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>12000</disappearsAfterTicks> <!-- 100 segundos, ~1.5 minutos -->
      </li>
    </comps>
    <isBad>true</isBad>
    <lethalSeverity>-1</lethalSeverity>
  </HediffDef>
</Defs>